<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTDMapper3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.wsjm.mapper.UserMapper">

    <insert id="insertUser" parameterType="com.project.wsjm.domain.UserDto">
        INSERT INTO users(username, password, language)
        VALUES(#{username}, #{password}, #{language})
    </insert>

    <select id="userList" resultType="com.project.wsjm.domain.UserDto">
        SELECT * FROM users
        ORDER BY id
    </select>

    <select id="fetchUserByID" resultType="com.project.wsjm.domain.UserDto"
            parameterType="int">
        SELECT * FROM users
        WHERE id = #{id}
    </select>

    <delete id="deleteUser" parameterType="int">
        DELETE FROM users
        WHERE id = #{id}
    </delete>

    <update id="updateUser" parameterType="com.project.wsjm.domain.UserDto">
        UPDATE users
        SET language = #{language}
        WHERE id = #{id}
    </update>

</mapper>
